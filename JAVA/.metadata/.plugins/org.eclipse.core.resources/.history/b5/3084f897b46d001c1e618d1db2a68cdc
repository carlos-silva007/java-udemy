package oo.composicao.desafio;

public class Sistema {
	
	public static void main(String[] args) {
		
		
		Compra compra1 = new Compra();
		compra1.addItem("Caderno", 10.74, 4);
		compra1.addItem(new Produto("Notebook",1900.50), 2);

		Compra compra2 = new Compra();
		compra2.addItem("Borracha", 2.11, 6);
		compra2.addItem(new Produto("Impressora", 510.20), 3);
		
		Cliente client1 = new Cliente("Carlos A R Silva");
		client1.compras.add(compra1);
		client1.compras.add(compra2);
		
		System.out.println(client1.obterValorTotal());
		
	}

}
